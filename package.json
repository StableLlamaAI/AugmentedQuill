{
  "name": "augmentedquill-js",
  "version": "1.0.0",
  "description": "JavaScript tests for AugmentedQuill",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint static/js/**/*.js tests/js/**/*.js",
    "lint:fix": "eslint static/js/**/*.js tests/js/**/*.js --fix"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "babel-jest": "^29.7.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "moduleFileExtensions": [
      "js"
    ],
    "testMatch": [
      "**/tests/js/**/*.test.js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/js/setup.js"
    ]
  }
}
