{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Backend (FastAPI)",
            "type": "debugpy",
            "request": "launch",
            "module": "app.main",
            "args": ["--reload", "--host", "127.0.0.1", "--port", "8000"],
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Frontend (Chrome)",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}/frontend/src",
            "sourceMapPathOverrides": {
                "webpack:///./src/*": "${webRoot}/*"
            }
        }
    ],
    "compounds": [
        {
            "name": "Full Stack Dev (Backend + Frontend)",
            "configurations": ["Backend (FastAPI)"],
            "preLaunchTask": "frontend: build"
        }
    ]
}
